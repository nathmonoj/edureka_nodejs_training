<% extend('../html_layout') %>
  <div class="container  mt-4">
    <div class="card">
      <div class="card-header">
        <div class="d-flex justify-content-between">
          <div>
            Hello Admin(<%= user.name %>)
          </div>
          <div>
            <b><a href="/user/logout">Logout</a></b>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="card mt-4">
          <div class="card-header">Site User Lists</div>
          <div class="table-responsive mt-4">

            <table id="bug_data_table" class="table table-bordered">
              <thead>
                <tr>
                  <th>User Name</th>
                  <th>User Email</th>
                  <th>User Role</th>
                  <th>Created</th>
                </tr>
              </thead>
              <tbody>
                <% userList.forEach((userData)=> { %>
                  <tr>
                    <td>
                      <p class="fw-bold mb-1">
                        <%= userData.name %>
                      </p>
                    </td>
                    <td>
                      <p class="text-muted mb-0">
                        <%= userData.email %>
                      </p>
                    </td>
                    <td>
                      <p class="text-muted mb-0">
                        <%= userData.rle %>
                      </p>
                    </td>
                    <td>
                      <p class="text-muted mb-0">
                        <%= moment(userData.createdAt).format('Do MMMM, YYYY'); %>
                      </p>
                    </td>
                  </tr>
                  <% }); %>
              </tbody>
            </table>
            <script>
              $(document).ready(function () {
                $('#bug_data_table').DataTable();
              });
            </script>
          </div>
        </div>
      </div>
    </div>
  </div>